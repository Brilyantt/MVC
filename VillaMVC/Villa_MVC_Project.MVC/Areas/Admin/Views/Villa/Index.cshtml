@model List<Villa>
                       

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <p class="card-description">
                    Add class <code>.table-striped</code>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                            <th>
                                #
                            </th>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Location
                                </th>
                                Action
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Villa item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/assets/images/img/@item.ImgPath" alt="image" />
                                    </td>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.Location
                                    </td>
                                    <td>
                                    <a asp-area="Admin" asp-controller="Villa" asp-action="Info" asp-route-id="@item.Id" class="btn btn-outline-info m-2">Info</a>
                                    <a asp-area="Admin" asp-controller="Villa" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning m-2">Update</a>
                                    <a asp-area="Admin" asp-controller="Villa" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger m-2">Delete</a>

                                    </td>
                                </tr>

                            }

                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

