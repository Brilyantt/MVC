@model Villa


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                       
                            <tr>
                                <td class="py-1">
                                    <img src="~/admin/assets/images/@Model.ImgPath" alt="image" />
                                </td>
                                <td>
                                    @Model.CategoryName
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    @Model.Price
                                </td>
                                <td>
                                    @Model.Location
                                </td>
                            </tr>
                            <tr>
                                <a asp-area="Admin" asp-controller="Villa" asp-action="Info" asp-route-id="@Model.Id" class="btn btn-outline-info m-2">Info</a>
                                <a asp-area="Admin" asp-controller="Villa" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-outline-warning m-2">Update</a>
                                <a asp-area="Admin" asp-controller="Villa" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger m-2">Delete</a>

                            </tr>

                        


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

