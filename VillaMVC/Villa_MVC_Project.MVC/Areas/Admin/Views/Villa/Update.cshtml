@model Villa

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update form</h4>
            <p class="card-description">
                Update form layout
            </p>
            <form asp-area="Admin" asp-controller="Villa" asp-action="Update" method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
