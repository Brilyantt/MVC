@model VillaVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create form</h4>
            <p class="card-description">
                Cretae form layout
            </p>
            <form asp-area="Admin" asp-controller="Villa" asp-action="Create"  method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputUsername1">Category Name</label>
                    <input asp-for="CategoryName" class="form-control" id="" >
                    <span asp-validation-for="CategoryName" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Price</label>
                    <input asp-for="Price" class="form-control" id="" >
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Location</label>
                    <input asp-for="Location" class="form-control" id="" >
                    <span asp-validation-for="Location" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label  class="form-label">Image</label>
                    <input asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>

                </div>
               
                <button type="submit" class="btn btn-primary mr-2">Create</button>
                
            </form>
        </div>
    </div>
</div>